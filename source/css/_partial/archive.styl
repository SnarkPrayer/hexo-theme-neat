.timeline-row
		clearfix()
		padding: 20px 0
		.content
				margin-left: 25px
				position: relative
				border-bottom: 1px solid color-border-light
				i 
					display: none
				h1,
				time
						padding: 10px
				h1
						font-size: 16px
				time
						font-size: 12px
						color: color-grey
						background-color: rgba(244, 246, 247, 0.2)

.timeline-row-major
	margin-bottom: 40px
				
	.title
		text-align: center
		font-size: 24px
		line-height: 30px
		font-weight: 500
