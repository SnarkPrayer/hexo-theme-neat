#toggle
    position absolute
    left -100%
    top -100%
    &:focus
        & ~ .toggle-container
            .button-toggle
                box-shadow 0 0 0 8px rgba(255, 255, 255, 0.5), inset 0 0 0 20px rgba(255, 255, 255, 0.5)
    &:checked
        & ~ .content, ~ #footer
              transform: translate3d(0, 70px, 0)
        & ~ .toggle-container
            .button-toggle
                box-shadow 0 0 0  275px rgba(255, 255, 255, 0.5), inset 0 0 0 10px rgba(255, 255, 255, 0.5)
                &:hover
                    box-shadow 0 0 0 275px rgba(255, 255, 255, 0.5), inset 0 0 0 10px rgba(255, 255, 255, 0.5), 0 0 0 4px rgba(255, 255, 255, 0.5), inset 0 0 0 10px rgba(255, 255, 255, 0.5)
                &:before
                    transform translateY(-50%) rotate(45deg) scale(1)
                &:after
                    transform translateY(-50%) rotate(-45deg) scale(1)
        &:focus
            & ~ .toggle-container
                .button-toggle
                    box-shadow 0 0 0  275px rgba(255, 255, 255, 0.5), inset 0 0 0 10px rgba(255, 255, 255, 0.5), 0 0 0 4px rgba(255, 255, 255, 0.5), inset 0 0 0 10px rgba(255, 255, 255, 0.5)
        & ~ .nav
            margin-bottom 100px
            pointer-events auto
            transform translate(50px, 50px)
            .nav-item
                color color-default
                letter-spacing 0
                height 40px
                line-height 40px
                opacity 1
                transform scaleY(1)
                transition 0.5s, opacity 0.1s
                &:nth-child(1)
                    transition-delay 0.15s
                &:nth-child(1):before
                    transition-delay 0.15s
                &:nth-child(2)
                    transition-delay 0.1s
                &:nth-child(2):before
                    transition-delay 0.1s
                &:nth-child(3)
                    transition-delay 0.1s
                &:nth-child(3):before
                    transition-delay 0.1s
                &:nth-child(4)
                    transition-delay 0s
                &:nth-child(4):before
                    transition-delay 0s
                &:before
                    opacity 0

.toggle-container
  display none
  position relative
  z-index 20
  @media mq-sm
    display block
.button-toggle
    position absolute
    display inline-block
    width 20px
    height 20px
    margin 25px
    background-color transparent
    border none
    cursor pointer
    border-radius 100%
    transition 0.6s
    &:hover
        box-shadow 0 0 0 8px rgba(255, 255, 255, 0.5), inset 0 0 0 20px rgba(255, 255, 255, 0.5)
    &:before
        transform translateY(-50%) rotate(45deg) scale(0)
    &:after
        transform translateY(-50%) rotate(-45deg) scale(0)

.button-toggle:before, .button-toggle:after
    position absolute
    content ''
    top 50%
    left 0
    width 100%
    height 2px
    background-color color-default
    border-radius 5px
    transition 0.5s

#logo
  position absolute
  top 0
  left 25px
  display block
  z-index 200
  margin 25px 0
  font-size 26px
  font-family 'Libre Barcode 39', cursive
  text-transform uppercase
  sup
    opacity .5
  @media mq-sm
    left auto
    right 25px

.nav
    position absolute
    top 0
    right 0
    font-family 'Source Code Pro', monospace
    display inline-block
    margin 25px
    transition 0.5s
    text-transform uppercase
    z-index 200
    @media mq-sm
      position relative
      pointer-events none
      left 0
      right auto
.nav-item
  margin 0 1.2em
  font-size 14px
  &:first-child
    margin-left 0
  &:last-child
      margin-right 0
  @media mq-sm
    position relative
    display inline-block
    margin 0
    float left
    clear both
    color transparent
    letter-spacing -6.2px
    height 7px
    line-height 7px
    text-transform uppercase
    white-space nowrap
    transform scaleY(0.2)
    transition 0.5s, opacity 1s
    letter-spacing -6.5px
    &:nth-child(1)
        transition-delay 0s
    &:nth-child(1):before
        transition-delay 0s
    &:nth-child(2)
        transition-delay 0.1s
    &:nth-child(2):before
        transition-delay 0.1s
    &:nth-child(3)
        transition-delay 0.1s
    &:nth-child(3):before
        transition-delay 0.1s
    &:nth-child(4)
        transition-delay 0.15s
    &:nth-child(4):before
        transition-delay 0.15s
    &:before
        position absolute
        content ''
        top 50%
        left 0
        width 100%
        height 2px
        background-color color-default
        transform translateY(-50%) scaleY(5)
        transition 0.5s
