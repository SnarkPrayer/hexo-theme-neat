.header
	position: relative
	height: header-height
	padding: 20px
	font-size: 18px
	font-family: 'Abel'
	line-height: (header-height/2)
	@media mq-mobile
		line-height: 1

	.header-logo
		float: left
		font-family: 'Alegreya+Sans+SC'
		font-size: 24px
		text-transform: uppercase
		height: 40px
		@media mq-mobile
			text-align: center
			font-weight: bold
			font-size: 16px

	.header-nav
		float: right
		@media mq-mobile
			text-align: center

		nav
			a
				padding: 0 1em
				font-size: 16px
