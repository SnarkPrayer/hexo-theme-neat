// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #000
color-white = #fff
color-grey = #989fa5
color-border = #e1e2e6
color-border-light = #f1f2f6
color-link = #1c1c1c
color-txt = #1f1f1f
color-background = #f5f8f9
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-size = 12px
line-height = 1.6em
