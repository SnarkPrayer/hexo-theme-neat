font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace

// Header
logo-size = 40px
header-height = 80px

sidebar = hexo-config("sidebar")

// Layout
block-margin = 128px
article-padding = 32px

main-column = 9



// Grids
column-width = 120px

// Media queries
mq-mobile = "screen and (max-width: 768px)"
