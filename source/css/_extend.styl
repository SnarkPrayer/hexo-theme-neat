$block-caption
  text-decoration: none
  color: color-grey
  font-size: 14px
  margin-bottom: 15px

$block
  background: #fff
  box-shadow: 1px 2px 3px #ddd
  border: 1px solid color-border
  border-radius: 3px

$block-wrap
  background-color: #fff
  box-shadow: 0 5px 10px rgba(color-default,0.1)

$type-style
  font-size: 16px
  line-height: 1.8
  letter-spacing: 0.2px
  font-weight: 300
  font-style: normal
  color: color-default
  a
    color: color-link
    text-decoration: underline

  h1,h2,h3,h4,h5,h6
    line-height:1
    margin:1.4em 0 0.8em
    color: #000
    font-weight: 400

  p
    text-align: justify
  em
    font-style: italic

  h1
    font-size: 1.8em
  h2
    font-size: 1.6em
  h3
    font-size: 1.4em
  h4
    font-size: 1.2em
  h5
    font-size: 1em
  h6
    font-size: 1em
  
  audio, canvas, video
    display: inline-block

  fieldset, img, audio, canvas, video
    border: 0
    max-width: 100%
    display: block
    margin: 1em auto 0 auto

  table
    border-collapse: collapse
    border-spacing: 0

  blockquote
    position: relative
    color: #999
    border-left: 1px solid color-border
    padding-left: 1.5em
    margin: 1.8em 0

    address
      text-align: right

  acronym, abbr
    border-bottom: 1px dotted
    font-variant: normal
  abbr
    cursor: help

  del
    text-decoration: line-through

  address, caption, cite, code, dfn, th, var
    font-style: normal
    font-weight: 400

  ul, ol
    li
      list-style: initial
      margin-left: 2em
      p
        margin: 0
  
  caption, th 
    text-align: left
  
  q:before, q:after 
    content: ''

  sub, sup 
    font-size: 75%
    line-height: 0
    position: relative
  
  :root sub, :root sup 
    vertical-align: baseline
  
  sup 
    top: -0.5em

  sub 
    bottom: -0.25em
  
  ins
    text-decoration: none

  u 
    text-decoration: underline
  
  mark 
    background: #fffdd1
    border-bottom: 1px solid #ffedce
    padding: 2px
    margin: 0 5px

  .caption
    color: color-grey
    display: block
    font-size: 0.8em
    position: relative
    text-align: center
    margin-bottom: 1.2em

  a#more
    display: block
  
