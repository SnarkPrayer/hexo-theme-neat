.article-cover
  position: relative
  width: 100%
  height: 61.8vh
  text-align: center
  overflow: hidden
  background-size: cover
  background-position: center
  z-index: 1
  &:before
    content: ''
    display: inline-block
    height: 100%
    vertical-align: middle
    margin-right: -.25em
  .cover-layer
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    background-color: #fff
    opacity: .6
    z-index: -1
  @media mq-mobile
    height: 45vh

.article-header
  text-align: center
  display: inline-block
  vertical-align: middle
  padding: article-padding 0
  z-index: 11
  .article-title
    h1
      margin: 12px 0
      font-size: 32px
      text-transform: none
      letter-spacing: 0px
      font-weight: 300
      font-style: normal
      @media mq-mobile
        font-size: 24px

    .article-date, .article-category-link
      font-size: 16px
      color: color-grey
      font-weight: 300

    .article-category-link
      &:hover
        color: color-default

    @media mq-mobile
      height: auto

.article
  width: 100%
  margin-top: block-margin
  @media mq-mobile
    margin-top: (block-margin/1.6)
  
  .article-header
    display: block

  .article-entry
    @extend $type-style
    
    .article-more-link
      margin: 40px 0 0
      text-align: center
      font-family: Abel
      a
        line-height: 26px
        padding: 0 30px
        border-radius: 13px
        color: color-grey
        text-decoration: none
        &:hover
          color: color-default

  .article-footer
    padding: article-padding 0
    text-align: center
    .article-tag
      padding: 0 0 article-padding 0
      color: color-grey
      border-bottom: 1px dotted color-border
      margin-bottom: article-padding;
      a
        color: color-grey
        &:hover
          color: color-default

.article-type-post
  margin-top: 0
  .article-date
    display: block
    opacity: .7
    margin: 0 auto article-padding auto

.article-cover
  .article-header
    h1
      font-size: 42px
      @media mq-mobile
        font-size: 24px

    .article-date, .article-category-link
      font-size: 20px
      color: color-default


#article-nav
  clearfix()
  position: relative
  margin: article-padding 0
  &:before
    absolute-center(8px)
    content: ""
    border-radius: 50%
    background: color-grey

.article-nav-link-wrap
  text-decoration: none
  color: color-grey
  box-sizing: border-box
  text-align: center
  display: block
  width: 50%
  &:hover
    color: color-default

#article-nav-newer
  float: left
  text-align: right
  padding-right: 30px

#article-nav-older
  float: right
  text-align: left
  padding-left: 30px

.article-nav-caption
  letter-spacing: 2px
  line-height: 1em
  text-transform: uppercase
  #article-nav-newer &
    margin-right: -2px

.article-nav-title
  font-size: 0.85em
  margin-top: 0.5em
  line-height: line-height

